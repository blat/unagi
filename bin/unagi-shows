#!/usr/bin/env python

import sys
sys.path.append('/path/to/unagi/')

from unagi.show import Show
from unagi.show import Episode
from unagi.user import User
from database import session

# update shows
shows = session.query(Show).join(Show.users).all()
for show in shows:
    show.sync_metadata()
    show.sync_episodes(Episode.STATUS_ACTIVE)
session.commit()
